/* pages/user/index.wxss */
@import "/common/style/font.wxss";
page {
  height: 100%;
  position: relative;
  background: #f0f0f0;
}
.page {
  height: 100%;
  background: #ccc;
  overflow: hidden;
}
.user {
  padding: 10rpx;
  background: #fff;
  border-bottom: 1px solid #ddd;
}
.avatar {
  display: block;
  margin: 10rpx auto;
  width: 200rpx;
  height: 200rpx;
  border: 5rpx solid #eee;
  background: #fcfcfc;
  border-radius: 50%;
}
.user-info {
  font: 30rpx/50rpx "宋体";
  text-align: center;
  color: #000;
}
.user-info text {
  margin: 0 20rpx;
}
.menu-list {
  background: #fff;
}
.menu-item {
  position: relative;
  padding: 0 29rpx;
  display: block;
  font: 26rpx/100rpx "宋体";
  border-bottom: 1px solid #ddd;
  height: 100rpx;
  color: #000;
}
.menu-item:last-of-type {
  border-bottom: none;
}
.menu-item::after {
  content: "\e62a";
  position: absolute;
  right: 29rpx;
  top: 0;
  font-family: "iconfont";
}